@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="site-section courses-title pb-0" id="courses-section">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-lg-7 text-center" data-aos="fade-up" data-aos-delay="">
                <h2 class="section-title">Exhibition</h2>
            </div>
        </div>
    </div>
</div>
<div class="site-section" id="programs-section">
    <div class="container">
        @if (ViewBag.data != null)
        {
            int i = 1;
            foreach (var item in ViewBag.data)
            {
                if (i % 2 == 0)
                {
                    <div class="row mb-5 align-items-center">
                        <div class="col-lg-7 mb-5" data-aos="fade-up" data-aos-delay="100">
                            <img src="~/admin/@item.Image" alt="Image" class="img-fluid">
                        </div>
                        <div class="col-lg-4 ml-auto" data-aos="fade-up" data-aos-delay="200">
                            <h2 class="text-black mb-4">@item.Account.Name</h2>
                            <p class="mb-4">@item.Description</p>

                            <div class="d-flex align-items-center custom-icon-wrap mb-3">
                                <span class="custom-icon-inner mr-3"><span class="icon icon-graduation-cap"></span></span>
                                <div><a asp-controller="Competition" asp-action="Details" asp-route-id="@item.Competition.Id" class="m-0">Competition: @item.Competition.Name</a></div>
                            </div>

                            <div class="d-flex align-items-center custom-icon-wrap">
                                <span class="custom-icon-inner mr-3"><span class="icon icon-university"></span></span>
                                <div><h3 class="m-0">@item.Price $</h3></div>
                            </div>

                        </div>
                    </div>
                }
                else
                {
                    <div class="row mb-5 align-items-center">
                        <div class="col-lg-7 mb-5 order-1 order-lg-2" data-aos="fade-up" data-aos-delay="100">
                            <img src="~/admin/@item.Image" alt="Image" class="img-fluid">
                        </div>
                        <div class="col-lg-4 mr-auto order-2 order-lg-1" data-aos="fade-up" data-aos-delay="200">
                            <h2 class="text-black mb-4">@item.Account.Name</h2>
                            <p class="mb-4">@item.Description</p>

                            <div class="d-flex align-items-center custom-icon-wrap mb-3">
                                <span class="custom-icon-inner mr-3"><span class="icon icon-graduation-cap"></span></span>
                                <div><a asp-controller="Competition" asp-action="Details" asp-route-id="@item.Competition.Id" class="m-0">Competition: @item.Competition.Name</a></div>
                            </div>
                            <div class="d-flex align-items-center custom-icon-wrap">
                                <span class="custom-icon-inner mr-3"><span class="icon icon-university"></span></span>
                                <div><h3 class="m-0">@item.Price $</h3></div>
                            </div>
                        </div>
                    </div>
                }
                i++;

            }
        }

    </div>
</div>