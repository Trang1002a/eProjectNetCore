@model X.PagedList.IPagedList<eProjectNetCore.Models.Project>
    @using X.PagedList.Mvc.Core;
    @{
ViewData["Title"] = "Profile";
Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <div class="site-section courses-title pb-0" id="courses-section">
        <div class="container">
            <div class="row mb-5 justify-content-center">
                <div class="col-lg-7 text-center" data-aos="fade-up" data-aos-delay="">
                    <h2 class="section-title">Exam Submitted</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Account)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Competition)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
        {
                    <tr>
                        <td>
                            <img src="~/admin/@item.Image" alt="@item.Image" width="60" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <span class="btn btn-success">@Html.DisplayFor(modelItem => item.Status)</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Account.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Competition.Name)
                        </td>
                        <td>
                            <a asp-controller="Competition" asp-action="Details" asp-route-id="@item.Competition.Id" class="btn btn-warning">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        </td>
                    </tr>
        }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
    new PagedListRenderOptions
    {
    LiElementClasses = new string[] { "page-item" },
    PageClasses = new string[] { "page-link" }
    })
        </div>
    </div>


    
